	"scripts": {
		"build": "rm -rf dist && tsc",
		"watch": "rm -rf dist && tsc -w",
		"test": "jest",
		"lint": "eslint src test",
		"localstack:start": "docker-compose up",
		"localstack:stop": "docker-compose down",
		"cdk": "cdk",
		"cdk:synth": "cdk synth",
		"cdk:bootstrap": "dotenv -- bash -c 'cdk bootstrap aws://$AWS_ACCOUNT/$AWS_REGION'",
		"cdk:deploy": "dotenv cdk deploy",
		"cdk:destroy": "dotenv cdk destroy",
		"cdklocal:destroy": "dotenv cdklocal destroy",
		"cdklocal:bootstrap": "dotenv cdklocal bootstrap",
		"cdklocal:deploy": "dotenv -- cdklocal deploy --require-approval never"
	},
