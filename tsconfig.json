{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"lib": ["es2019", "dom" /* weird, this is needed for the AWS SDK */],
		"declaration": false,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"outDir": "dist",
		"allowJs": false
	},
	"include": ["src/**/*"],
	"exclude": ["cdk.out", "dist"]
}
