{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"lib": ["es2018"],
		"declaration": false,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"outDir": "dist"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["cdk.out", "dist"]
}
